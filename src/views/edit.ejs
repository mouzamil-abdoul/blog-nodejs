<% layout('layout/app') %>

<form method="post">
    <div class="card-form">
        <div class="form-group">
            <label for="title">Titre</label>
            <input id="title" name="title" type="text" value="<%= post.title %>">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input id="description" name="description" type="text" value="<%= post.description %>">
        </div>
        <div class="form-group">
            <label for="body">Contenu</label>
            <textarea name="body" id="body" cols="30" rows="10"><%= post.body %></textarea>
        </div>
        <button type="submit">Modifier le post</button>
    </div>
</form>